<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhxh.data.mapper.CrudMapper">
	<resultMap type="com.zhxh.data.domain.Entity" id="EntityResultMap">
		<id property="recordId" column="record_id" jdbcType="BIGINT" />
		
		<!-- 
		  <collection property="traceInfos" select="com.zhxh.data.mapper.TraceInfoMapper.getTraceInfos" column="record_id" fetchType="lazy" />
		-->
	</resultMap>
	
	<sql id="selectByPage">
         <where>
	         ${where}
	     </where>
         <if test="orderBy!=null and orderBy!=''">
	            order by ${orderBy}
	     </if>
	     
	     <if test="start!=null and start!=-1">
	         limit #{start},#{limit}
	     </if>		
	</sql>

</mapper>